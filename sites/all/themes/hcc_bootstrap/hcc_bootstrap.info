name = HCC Bootstrap theme
description = A Basic Bootstrap theme for HCC developed sites
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[topmenu]        = 'Top menu'
regions[navigation]     = 'Navigation'
regions[search]         = 'Search'
regions[text_size]      = 'Text size'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[news]        	= 'Homepage news'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer_legal]   = 'Footer menu and legal content'
regions[footer_logos]   = 'Footer logos'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'


